<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Разрешаем cleartext traffic для отладки (если нужно) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Доверяем системным сертификатам -->
            <certificates src="system" />
            <!-- Доверяем пользовательским сертификатам (для отладки) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Специальная конфигурация для OpenWeatherMap API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.openweathermap.org</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Для localhost при разработке (если нужно) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
</network-security-config>


