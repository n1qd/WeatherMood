<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#5B9FED">

    <!-- Профиль пользователя -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Аватар -->
        <TextView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="👤"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:backgroundTint="#FFFFFF"
            android:layout_marginEnd="16dp" />

        <!-- Информация о пользователе -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гость"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войдите в аккаунт"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:alpha="0.8"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка авторизации -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnAuthCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔐"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvAuthButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Войти / Регистрация"
                android:textSize="15sp"
                android:textColor="#5B9FED"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textSize="20sp"
                android:textColor="#5B9FED" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Местоположение -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Избранные города"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:alpha="0.8"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Контейнер для списка городов -->
    <LinearLayout
        android:id="@+id/citiesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>
