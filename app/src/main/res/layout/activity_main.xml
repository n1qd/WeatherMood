<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weathermood.MainActivity">

    <!-- Основной контент с SwipeRefresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E8EDF5">

            <!-- Верхняя панель с городом и настройками -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#E8EDF5">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Меню" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Москва, Россия"
                android:textSize="18sp"
                android:textColor="#1A1A2E"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Поиск" />

        </RelativeLayout>

        <!-- Основной контент со скроллом -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Большая карточка с текущей погодой -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/weatherCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#5B9FED">

                    <RelativeLayout
                        android:id="@+id/weatherCardBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp">

                        <!-- Иконка погоды справа сверху -->
                        <TextView
                            android:id="@+id/tvWeatherIconLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:text="☀️"
                            android:textSize="80sp"
                            android:alpha="0.5"
                            android:shadowColor="#40000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="8"
                            android:layout_marginTop="-12dp"
                            android:layout_marginEnd="-12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWeatherCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Облачно"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tvTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6°C"
                            android:textSize="72sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvFeelsLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ощущается как 4°C"
                            android:textColor="#FFFFFF"
                            android:alpha="0.8"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="среда, 22 октября 2025"
                            android:textColor="#FFFFFF"
                            android:alpha="0.9"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp" />

                        <!-- Дополнительная информация -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/tvWind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ветер: 2.0 м/с"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:alpha="0.9"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:id="@+id/tvHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Влажность: 63%"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:alpha="0.9"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:id="@+id/tvPrecipitation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1019 hPa"
                                android:textSize="13sp"
                                android:textColor="#FFFFFF"
                                android:alpha="0.9" />

                        </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Прогноз -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Прогноз"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"
                    android:layout_marginBottom="12dp" />

                <!-- Почасовой прогноз -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/layoutHourlyForecast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </HorizontalScrollView>

                <!-- Настроение -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Настроение"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Как ваше настроение сегодня?"
                            android:textSize="15sp"
                            android:textColor="#1A1A2E"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="16dp" />

                        <!-- RatingBar для оценки настроения -->
                        <RatingBar
                            android:id="@+id/ratingMood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1.0"
                            android:rating="0"
                            android:layout_gravity="center"
                            android:progressTint="#FFD700"
                            android:progressBackgroundTint="#E0E0E0"
                            android:secondaryProgressTint="#FFD700" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Советы по одежде -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👕 Что надеть"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="👔"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvClothingAdvice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Рекомендуется легкая куртка и шарф"
                            android:textSize="15sp"
                            android:textColor="#1A1A2E"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Эко-советы -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌱 Эко-совет дня"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A2E"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="♻️"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvEcoAdvice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Сегодня отличная погода для прогулки пешком вместо поездки на машине!"
                            android:textSize="15sp"
                            android:textColor="#2E7D32"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Боковое меню (Sidebar) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#5B9FED"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
