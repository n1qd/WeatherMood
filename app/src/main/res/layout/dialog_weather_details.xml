<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#5B9FED">

    <!-- Верхняя часть с погодой -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <TextView
            android:id="@+id/dialogWeatherIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☀️"
            android:textSize="80sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/dialogWeatherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переменная облачность"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/dialogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Четверг, 24 Августа 2025"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Вкладки: Вчера / Сегодня / Завтра -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/btnYesterday"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Вчера"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.6"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/btnToday"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Сегодня"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/btnTomorrow"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Завтра"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.6"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Белая нижняя часть с деталями -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Детали"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A2E"
                android:layout_marginBottom="20dp" />

            <!-- Сетка с показателями 2x2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Первая строка -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Температура -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌡️"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/dialogTempCelsius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21°"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Цельсия"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Скорость ветра -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌬️"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/dialogWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 км/ч"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Скорость ветра"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center" />

                    </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Вторая строка -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- УФ индекс -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="☀️"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/dialogUvIndex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.2"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="УФ индекс"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Вероятность осадков -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌧️"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/dialogPrecipitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A2E"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Вероятность\nосадков"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center" />

                    </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
